{
  "manifest_version": 3,
  "name": "Boom Calendar Checker",
  "version": "0.1.0",
  "description": "Chrome extension to detect Boom Calendar iframe and display status.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Boom Calendar Checker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}